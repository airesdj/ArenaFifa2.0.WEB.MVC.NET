                                        <img title="" onclick="" style="cursor:pointer" width="" height="20px" src="/images/Confrontos_Cinza.JPG" id="drawsHistoryMatches">
                                        <img title="" onclick="" style="cursor:pointer" width="" height="20px" src="/images/Confrontos_Cinza.JPG" id="winsHistoryMatchesAwayTeam">
                                    </div>
                                </div>
                                <br><br>

                                <div class="gentelella-row">
                                    <div class="gentelella-col-md-12 gentelella-col-sm-12 gentelella-col-xs-12">
                                        <div class="gentelella-col-md-2 gentelella-col-sm-2 gentelella-col-xs-12 "></div>
                                        <div class="gentelella-col-md-2 gentelella-col-sm-2 gentelella-col-xs-12 gentelella-a-center">
                                            <br>
                                            <img src="/images/QuemMarcouMaisGols.jpg">
                                        </div>
                                        <div class="gentelella-col-md-4 gentelella-col-sm-4 gentelella-col-xs-12" style="font-size:24px;color:black">
                                            <img id="goalsHomeTeamHistory" height="20px" src="/images/Confrontos_Cinza.JPG">&nbsp;<span id="goalsHomeTeam">.</span>
                                            <br>
                                            <img id="goalsAwayTeamHistory" height="20px" src="/images/Confrontos_Cinza.JPG">&nbsp;<span id="goalsAwayTeam">.</span>
                                        </div>
                                    </div>
                                </div>
