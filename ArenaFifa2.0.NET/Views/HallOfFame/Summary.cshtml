@using ArenaFifa20.NET.Models
@model SummaryViewModel
@{
    ViewBag.Title = "Hall Of Fame - Summary";
}


<!-- page content -->
<div class="gentelella-right_col" role="main" style="padding-left:50px">
    <div class="gentelella-page-title">
        <div class="gentelella-col-md-12 gentelella-col-sm-6 gentelella-col-xs-12">
            <h3>HALL DA FAMA - PAINEL</h3>
        </div>
        <div class="gentelella-title_right">
            <div class="gentelella-col-md-5 gentelella-col-sm-5 gentelella-col-xs-12 gentelella-form-group gentelella-pull-right gentelella-top_search">
                <div class="gentelella-input-group">
                    &nbsp;
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="clearfix"></div>

    <div class="gentelella-x_content">

        <div class="gentelella-row gentelella-top_tiles">
            <div class="gentelella-animated gentelella-flipInY gentelella-col-lg-3 gentelella-col-md-3 gentelella-col-sm-6 gentelella-col-xs-12" style="width:400px">
                <div class="gentelella-tile-stats">
                    <div class="gentelella-icon"><i class="gentelella-fa gentelella-fa-trophy"></i></div>
                    <div class="gentelella-count">Série A - H2H</div>
                    <h3>@Model.psnIDSerieAH2H</h3>
                    <p>Técnico atual campeão. Time: @Model.teamIDSerieAH2H</p>
                </div>
            </div>
            <div class="gentelella-animated gentelella-flipInY gentelella-col-lg-3 gentelella-col-md-3 gentelella-col-sm-6 gentelella-col-xs-12" style="width:400px">
                <div class="gentelella-tile-stats">
                    <div class="gentelella-icon"><i class="gentelella-fa gentelella-fa-trophy"></i></div>
                    <div class="gentelella-count">Série A - FUT</div>
                    <h3>@Model.psnIDSerieAFUT</h3>
                    <p>Técnico atual campeão. Time: @Model.teamIDSerieAFUT</p>
                </div>
            </div>
            <div class="gentelella-animated gentelella-flipInY gentelella-col-lg-3 gentelella-col-md-3 gentelella-col-sm-6 gentelella-col-xs-12" style="width:400px">
                <div class="gentelella-tile-stats">
                    <div class="gentelella-icon"><i class="gentelella-fa gentelella-fa-trophy"></i></div>
                    <div class="gentelella-count">Série A - PRO</div>
                    <h3>@Model.psnIDSerieAPRO</h3>
                    <p>Clube atual campeão. Manager: @Model.teamIDSerieAPRO</p>
                </div>
            </div>
        </div>
        <br><br>
        <div class="gentelella-row gentelella-top_tiles">
            <div class="gentelella-animated gentelella-flipInY gentelella-col-lg-3 gentelella-col-md-3 gentelella-col-sm-6 gentelella-col-xs-12" style="width:400px">
                <div class="gentelella-tile-stats">
                    <div class="gentelella-icon"><i class="gentelella-fa gentelella-fa-trophy"></i></div>
                    <div class="gentelella-count">Copa Mundo</div>
                    <h3>@Model.psnIDCDM</h3>
                    <p>Técnico campeão - 15ª Temporada. Seleção: @Model.teamIDCDM </p>
                </div>
            </div>
            <div class="gentelella-animated gentelella-flipInY gentelella-col-lg-3 gentelella-col-md-3 gentelella-col-sm-6 gentelella-col-xs-12" style="width:400px">
                <div class="gentelella-tile-stats">
                    <div class="gentelella-icon"><i class="gentelella-fa gentelella-fa-trophy"></i></div>
                    <div class="gentelella-count">Liga Campeões</div>
                    <h3>@Model.psnIDUCL</h3>
                    <p>Técnico atual campeão. Time: @Model.teamIDUCL</p>
                </div>
            </div>
            <div class="gentelella-animated gentelella-flipInY gentelella-col-lg-3 gentelella-col-md-3 gentelella-col-sm-6 gentelella-col-xs-12" style="width:400px">
                <div class="gentelella-tile-stats">
                    <div class="gentelella-icon"><i class="gentelella-fa gentelella-fa-trophy"></i></div>
                    <div class="gentelella-count">Super Copa</div>
                    <h3>@Model.psnIDSCP</h3>
                    <p>Técnico atual campeão. Time: @Model.teamIDSCP</p>
                </div>
            </div>
        </div>
        <br><br>


    </div>
</div>
<!-- /page content -->
@section Scripts {
    <script>
        $(function () {
            if (detectMobileDevice() == 1) {
                //$("#includedContentMenuMobile").load("/arena20/includes/menu-logged-mobile.html");
                //$("#includedContentMenuRankingMobile").load("menu-my-matches-mobile.html");
                hidden_show_ObjectMobile("footerMobile", "block");
            }
        });

        $(document).ready(function () {
            if ('@TempData["returnMessage"]' != '')
                toastr.error('Aviso: @TempData["returnMessage"].');

            if ('@ViewBag.inRenewNextSeason' == '1')
                $("#liRenewNextSeason").show();
            else
                $("#liRenewNextSeason").hide();
        });

    </script>
}

