<div class="gentelella-col-md-3 gentelella-left_col">
    <div class="gentelella-left_col gentelella-scroll-view" style="width:250px">
        <br />

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="gentelella-main_menu_side gentelella-hidden-print gentelella-main_menu">
            <div class="gentelella-menu_section">
                <a href="/Arena20/MyMatches/Summary" title="Retornar para o Sumário"><h3>MINHA TEMPORADA</h3></a>
                <ul class="gentelella-nav gentelella-side-menu">
                    @if (ViewBag.inMyMatchesMenuH2H == "1")
                    {
                        <li>
                            <a><i class="gentelella-fa gentelella-fa-table"></i> H2H (X1) <span class="gentelella-fa gentelella-fa-chevron-down"></span></a>
                            <ul class="gentelella-nav gentelella-child_menu">
                                <li><a href="/Arena20/MyMatches/NextMatchH2H">Próximos Jogos</a></li>
                                <li><a href="/Arena20/MyMatches/MatchPlayedH2H">Jogos Realizados</a></li>
                                <li><a href="/Arena20/MyMatches/ScorerH2H">Artilheiros</a></li>
                                <li><a href="JAVASCRIPT: setSubmitMenuSummaryCurrentSeason('H2H', 0, 'Summary')">Temporada Atual</a></li>
                            </ul>
                        </li>
                    }
                    @if (ViewBag.inMyMatchesMenuFUT == "1")
                    {
                        <li>
                            <a><i class="gentelella-fa gentelella-fa-desktop"></i> FUT<br />(Ultimate Team) <span class="gentelella-fa gentelella-fa-chevron-down"></span></a>
                            <ul class="gentelella-nav gentelella-child_menu">
                                <li><a href="/Arena20/MyMatches/NextMatchFUT">Próximos Jogos</a></li>
                                <li><a href="/Arena20/MyMatches/MatchPlayedFUT">Jogos Realizados</a></li>
                                <li><a href="/Arena20/MyMatches/UploadLogoTeamFUT">Upload Escudo Time</a></li>
                                <li><a href="JAVASCRIPT: setSubmitMenuSummaryCurrentSeason('FUT', 0, 'Summary')">Temporada Atual</a></li>
                            </ul>
                        </li>
                    }
                    @if (ViewBag.inMyMatchesMenuPRO == "1")
                    {
                        <li>
                            <a><i class="gentelella-fa gentelella-fa-sitemap"></i> PRO CLUB <span class="gentelella-fa gentelella-fa-chevron-down"></span></a>
                            <ul class="gentelella-nav gentelella-child_menu">
                                <li><a href="/Arena20/MyMatches/NextMatchPRO">Próximos Jogos</a></li>
                                <li><a href="/Arena20/MyMatches/MatchPlayedPRO">Jogos Realizados</a></li>
                                <li><a href="/Arena20/MyMatches/ScorerPRO">Artilheiros</a></li>
                                <li><a href="/Arena20/MyMatches/UploadLogoTeamPRO">Upload Escudo Clube e Elenco</a></li>
                                <li><a href="JAVASCRIPT: setSubmitMenuSummaryCurrentSeason('PRO', 0, 'Summary')">Temporada Atual</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <!-- /sidebar menu -->

    </div>
</div>
