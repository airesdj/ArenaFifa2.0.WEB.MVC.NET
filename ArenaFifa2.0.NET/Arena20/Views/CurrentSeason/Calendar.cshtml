@using ArenaFifa20.NET.Models
@model ChampionshipCalendarListViewModel
@{
    ViewBag.Title = "Current Season - Calendar";
    int contChampionship = 0;
    int totalChampionship = Model.listOfChampionship.Count;
}

<form action="" class="form-horizontal" id="registration-form" method="post" role="form">

    @Html.AntiForgeryToken()
    <input type="hidden" id="actionForm" name="actionForm" value="" />
    <input type="hidden" id="actionType" name="actionType" value="" />
    <input type="hidden" id="currentModeTypeSeason" name="currentModeTypeSeason" value="" />
    <input type="hidden" id="championshipID" name="championshipID" value="" />
</form>

<!-- page content -->
<div class="gentelella-right_col" role="main" style="padding-left:50px">
    <div class="gentelella-page-title">
        <div class="gentelella-col-md-9 gentelella-col-sm-9 gentelella-col-xs-12">
            <h3>@("CALENDÁRIO DA TEMPORADA - " + Model.modeType)</h3>
        </div>
        <div class="gentelella-col-md-3 gentelella-col-sm-3 gentelella-a-right gentelella-col-xs-12">
            <img title="COMPETIÇÕES DA MODALIDADE @Model.modeType" src="/Arena20/images/@("logo-" + Model.modeType + "-beige.jpg")" width="60" />
        </div>
    </div>
    <br><br>

        <div class="gentelella-x_content">

            @for (contChampionship = 0; contChampionship < totalChampionship; contChampionship++)
            {
            <div class="gentelella-row">
                <div class="gentelella-col-md-6 gentelella-col-sm-6 gentelella-col-xs-12">
                    <div class="gentelella-x_panel">
                        <div class="gentelella-x_content">

                            <div class="gentelella-row">
                                <div class="gentelella-col-md-10 gentelella-col-sm-10 gentelella-col-xs-12">
                                    <span style="color:steelblue;text-align:justify;font-size:16px;font-weight:bold" class="gentelella-title_left">
                                        @Model.listOfChampionship[contChampionship].championshipName
                                    </span>
                                </div>
                                <div class="gentelella-col-md-2 gentelella-col-sm-2 gentelella-a-right gentelella-col-xs-12">
                                    <img title="@Model.listOfChampionship[contChampionship].championshipName" src="@("/images/championship-logo/" + Model.listOfChampionship[contChampionship].championshipName.Replace(" ", "_") + ".jpg")" width="40" />
                                </div>
                            </div>
                            <div class="gentelella-ln_solid"></div>
                            <div class="gentelella-row">
                                <div class="gentelella-col-md-8 gentelella-col-sm-8 gentelella-col-xs-12" style="font-weight:bold;font-family:courier new">
                                    Início do Campeonato......................:<br>
                                    Término da Fase de Classificação..........:<br>
                                    Dias Realizar Partida Classificação.......:<br>
                                    Término da Fase de Playoff................:<br>
                                    Dias Realizar Partida de Playoff..........:
                                </div>
                                <div class="gentelella-col-md-4 gentelella-col-sm-4 gentelella-col-xs-12">
                                    @Model.listOfChampionship[contChampionship].startDate.ToString("dd/MM/yyyy")<br>
                                    @if (Model.listOfChampionship[contChampionship].dayOfStage0 == 0)
                                    {
                                        @Html.Raw("Não há.<br>")
                                        @Html.Raw("Não há.<br>")
                                    }
                                    else
                                    {
                                        @Model.listOfChampionship[contChampionship].endStage0.ToString("dd/MM/yyyy")<br>
                                        @Model.listOfChampionship[contChampionship].dayOfStage0.ToString("00")<br>
                                    }
                                    @Model.listOfChampionship[contChampionship].endStagePlayoff.ToString("dd/MM/yyyy")<br>
                                    @Model.listOfChampionship[contChampionship].dayOfStagePlayoff.ToString("00")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @{contChampionship = contChampionship + 1; }
                @if (contChampionship < totalChampionship)
                {
                    <div class="gentelella-col-md-6 gentelella-col-sm-12 gentelella-col-xs-12">
                        <div class="gentelella-x_panel">
                            <div class="gentelella-x_content">

                                <div class="gentelella-row">
                                    <div class="gentelella-col-md-10 gentelella-col-sm-10 gentelella-col-xs-12">
                                        <span style="color:steelblue;text-align:justify;font-size:16px;font-weight:bold" class="gentelella-title_left">
                                            @Model.listOfChampionship[contChampionship].championshipName
                                        </span>
                                    </div>
                                    <div class="gentelella-col-md-2 gentelella-col-sm-2 gentelella-a-right gentelella-col-xs-12">
                                        <img title="@Model.listOfChampionship[contChampionship].championshipName" src="@("/images/championship-logo/" + Model.listOfChampionship[contChampionship].championshipName.Replace(" ", "_") + ".jpg")" width="40" />
                                    </div>
                                </div>
                                <div class="gentelella-ln_solid"></div>
                                <div class="gentelella-row">
                                    <div class="gentelella-col-md-8 gentelella-col-sm-8 gentelella-col-xs-12" style="font-weight:bold;font-family:courier new">
                                        Início do Campeonato......................:<br>
                                        Término da Fase de Classificação..........:<br>
                                        Dias Realizar Partida Classificação.......:<br>
                                        Término da Fase de Playoff................:<br>
                                        Dias Realizar Partida de Playoff..........:
                                    </div>
                                    <div class="gentelella-col-md-4 gentelella-col-sm-4 gentelella-col-xs-12">
                                        @Model.listOfChampionship[contChampionship].startDate.ToString("dd/MM/yyyy")<br>
                                        @if (Model.listOfChampionship[contChampionship].dayOfStage0 == 0)
                                        {
                                            @Html.Raw("Não há.<br>")
                                            @Html.Raw("Não há.<br>")
                                        }
                                        else
                                        {
                                            @Model.listOfChampionship[contChampionship].endStage0.ToString("dd/MM/yyyy")<br>
                                            @Model.listOfChampionship[contChampionship].dayOfStage0.ToString("00")<br>
                                        }
                                        @Model.listOfChampionship[contChampionship].endStagePlayoff.ToString("dd/MM/yyyy")<br>
                                        @Model.listOfChampionship[contChampionship].dayOfStagePlayoff.ToString("00")
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }

            </div>
            }


        </div>
</div>
<!-- /page content -->


@section Scripts {
    <script>
        $(function () {
            if (detectMobileDevice() == 1) {
                //$("#includedContentMenuMobile").load("/includes/menu-logged-mobile.html");
                //$("#includedContentMenuRankingMobile").load("menu-my-matches-mobile.html");
                hidden_show_ObjectMobile("footerMobile", "block");
            }
        });

        $(document).ready(function () {
            if ('@TempData["returnMessage"]' != '')
                toastr.error('Aviso: @TempData["returnMessage"].');

            if (detectMobileDevice() == 0) {
                activeSidebarMenu(window.location.pathname);
            }
        });

    </script>
}

