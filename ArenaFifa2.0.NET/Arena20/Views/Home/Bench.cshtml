@using ArenaFifa20.NET.Models
@model BenchModesViewModel
    @{
        ViewBag.Title = "Bench";
        int i = 0;
    }


    <!-- Start Breadcrumbs -->
    <div class="fables-light-background-color">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="fables-breadcrumb breadcrumb px-0 py-3">
                    <li class="breadcrumb-item"><a href="/Arena20/" class="fables-second-text-color">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Banco de Reservas</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- /End Breadcrumbs -->

    @using (Html.BeginForm("Bench", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "SendBench", role = "form" }))
    {
        <!-- Start page content -->
        <div class="container" style="background-color:#ffffff">

            <div class="row mt-3 mt-lg-5 mb-2">
                <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
                    <div class="text-center">
                        <img src="/Arena20/images/BancodeReservas3.jpg" style="width:200px"><br><br><br>
                        <h2 class="fables-second-text-color mb-5 font-weight-bold"> Todas Modalidades (H2H, FUT & PRO CLUB) </h2>
                        <p class="fables-forth-text-color my-4">
                            <b> A lista está ordenada por ordem cronológica de entrada no banco de reservas desde o início da temporada.</b>
                        </p>
                    </div>
                </div>
            </div>

            <div class="gallery-filter">
                <div class="portfolioFilter my-3 clearfix">
                    <a href="#" data-filter=".firstItemSelected" class="current fables-forth-text-color fables-second-hover-color">H2H</a>
                    <a href="#" data-filter=".bco-fut" class="fables-forth-text-color fables-second-hover-color">FUT</a>
                    <a href="#" data-filter=".bco-pro" class="fables-forth-text-color fables-second-hover-color">PRO CLUB</a>
                </div>
                <div class="portfolioContainer row filter-masonry">
                    <div class="firstItemSelected circle-effect">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel">
                                    <div class="bg-dark-blue white-color" style="line-height:40px;padding-left:10px">
                                        Banco de Reservas - H2H
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th width="5%">#</th>
                                                        <th width="50%">Nome</th>
                                                        <th width="25%">PSN</th>
                                                        <th width="20%">Estado</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.listOfBench)
                                                    {
                                                        if (item.typeBench == "H2H")
                                                        {
                                                            i++;
                                                            <tr>
                                                                <td>@i</td>
                                                                <td>@Html.DisplayFor(modelItem => item.name)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.psnID)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.state)</td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.table-responsive -->
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </div>
                    </div>
                    <div class="bco-fut circle-effect">
                        <!-- /.row -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel">
                                    <div class="fables-main-background-color white-color" style="line-height:40px;padding-left:10px">
                                        Banco de Reservas - FUT (Ultimate Team)
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th width="5%">#</th>
                                                        <th width="50%">Nome</th>
                                                        <th width="25%">PSN</th>
                                                        <th width="20%">Time</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{i = 0;
                                                        foreach (var item in Model.listOfBench)
                                                        {
                                                            if (item.typeBench == "FUT" && (item.team+"") != "")
                                                            {
                                                                i++;
                                                                <tr>
                                                                    <td>@i</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.psnID)</td>
                                                                    <td>@Html.DisplayFor(modelItem => item.team)</td>
                                                                </tr>
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.table-responsive -->
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </div>
                    </div>
                    <div class="bco-pro circle-effect">
                        <!-- /.row -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel">
                                    <div class="fables-second-background-color white-color" style="line-height:40px;padding-left:10px">
                                        Banco de Reservas - PRO CLUB
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th width="5%">#</th>
                                                        <th width="50%">Nome</th>
                                                        <th width="25%">PSN</th>
                                                        <th width="20%">Time</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{i = 0;
                                                        foreach (var item in Model.listOfBench)
                                                        {
                                                            if (item.typeBench == "PRO" && (item.team + "") != "")
                                                            {
                                                                i++;
                                                            <tr>
                                                                <td>@i</td>
                                                                <td>@Html.DisplayFor(modelItem => item.name)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.psnID)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.team)</td>
                                                            </tr>
                                                                }
                                                            }
                                                        }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.table-responsive -->
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
    <br /><br />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
        $(document).ready(function () {

            if ('@TempData["returnMessage"]' != '')
                toastr.error('Aviso: @TempData["returnMessage"].');

        });

        </script>
    }

